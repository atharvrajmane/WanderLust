<% layout("/layouts/boilerplates") %>
<h3>All Listing</h3>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for(list of allListing){ %>
  <a href="/listings/<%= list._id%>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= list.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= list.title %></b><br />
          &#8377;<%= list.price.toLocaleString("en-IN") %> / night
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
